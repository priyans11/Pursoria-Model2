<%- include('./partials/header', { loggedin: false }) %>

<% if(typeof error !== 'undefined' && error.length > 0){ %>
    <div class="fixed top-5 left-1/2 -translate-x-1/2 bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg z-50 flash-message transition-opacity duration-300">
        <span class="flex items-center">
            <i class="ri-error-warning-line mr-2"></i> <%= error %>
        </span>
    </div>
<% } %>

<div class="min-h-screen flex items-center justify-center bg-gray-50 px-4">
    <div class="max-w-md w-full">
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
            <!-- Header with background -->
            <div class="bg-gradient-to-r from-blue-600 to-indigo-800 px-6 py-8 text-center">
                <h2 class="text-3xl font-bold text-white">Admin Access</h2>
                <p class="text-blue-100 mt-2">Secure login to manage your store</p>
            </div>
            
            <!-- Form section -->
            <div class="px-6 py-8">
                <form action="/owners/login" method="post" class="space-y-6">
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                        <div class="relative rounded-md shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="ri-mail-line text-gray-400"></i>
                            </div>
                            <input
                                id="email"
                                name="email"
                                type="email"
                                required
                                class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                                placeholder="admin@example.com">
                        </div>
                    </div>
                    
                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                        <div class="relative rounded-md shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="ri-lock-line text-gray-400"></i>
                            </div>
                            <input
                                id="password"
                                name="password"
                                type="password"
                                required
                                class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                                placeholder="••••••••">
                        </div>
                    </div>
                    
                    <div>
                        <button type="submit" class="w-full flex justify-center items-center bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-4 rounded-md transition-colors">
                            <i class="ri-login-box-line mr-2"></i> Log in to Admin Panel
                        </button>
                    </div>
                </form>
                
                <!-- Debug info - only visible in development -->
                <% if(process.env.NODE_ENV === 'development') { %>
                <div class="mt-6 p-4 bg-gray-100 rounded-md">
                    <h4 class="text-sm font-bold text-gray-800 mb-2">Development Info</h4>
                    <p class="text-xs text-gray-600">Visit <a href="/setup-admin" class="text-blue-600 underline">/setup-admin</a> to create a test admin account.</p>
                    <p class="text-xs text-gray-600 mt-1">Default credentials: admin@pursoria.com / admin123</p>
                </div>
                <% } %>
                
                <div class="mt-8 text-center">
                    <a href="/" class="text-blue-600 hover:text-blue-800 flex items-center justify-center">
                        <i class="ri-arrow-left-line mr-1"></i> Return to customer login
                    </a>
                </div>
            </div>
            
            <!-- Footer -->
            <div class="px-6 py-4 bg-gray-50 border-t">
                <p class="text-xs text-center text-gray-500">
                    This secure area is restricted to authorized administrators only.
                    <br>All login attempts are monitored and recorded.
                </p>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>